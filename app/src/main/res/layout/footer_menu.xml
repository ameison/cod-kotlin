<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingEnd="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingStart="20dp"
    android:paddingTop="16dp">

    <Button
        android:id="@+id/btnDestacaTuAnuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:fontFamily="@font/quicksand_bold"
        android:background="@drawable/bg_btn_celeste"
        android:text="@string/destaca_tu_anuncio"
        android:textAllCaps="false"
        android:textColor="@color/cns_blanco" />

    <Button
        android:id="@+id/btnCompraMasanuncios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontFamily="@font/quicksand_bold"
        android:textAllCaps="false"
        android:background="@drawable/bg_borde_celeste"
        android:text="@string/compra_tu_anuncio"
        android:textColor="@color/cns_celeste" />

</LinearLayout>